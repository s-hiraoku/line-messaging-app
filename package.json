    "clsx": "^2.1.1",
    "jotai": "^2.15.1",
    "jotai-devtools": "^0.13.0",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-auth": "^5.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
